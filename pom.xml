<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.ethan</groupId>
    <artifactId>spring-creed</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0</version>

    <properties>
        <java.version>12</java.version>
        <maven.compiler.source>12</maven.compiler.source>
        <maven.compiler.target>12</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <commons.lang3.version>3.9</commons.lang3.version>
        <commons.text.version>1.8</commons.text.version>
        <lombok.version>1.18.10</lombok.version>
        <junit.version>5.5.2</junit.version>
        <jwt.version>3.8.3</jwt.version>
        <jjwt.version>0.10.7</jjwt.version>

        <spring.boot.version>2.2.1.RELEASE</spring.boot.version>
    </properties>

    <modules>
        <module>spring-creed-cache</module>
        <module>spring-creed-core</module>
        <module>spring-creed-common</module>
        <module>spring-creed-cloud</module>
        <module>spring-creed-app</module>
        <module>spring-creed-component</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>${spring.boot.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>Hoxton.RELEASE</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>com.ethan</groupId>
                <artifactId>spring-creed-cache</artifactId>
                <version>1.0.0</version>
            </dependency>
            <dependency>
                <groupId>com.ethan</groupId>
                <artifactId>spring-creed-core</artifactId>
                <version>1.0.0</version>
            </dependency>
            <dependency>
                <groupId>com.ethan</groupId>
                <artifactId>spring-creed-common</artifactId>
                <version>1.0.0</version>
            </dependency>
            <dependency>
                <groupId>com.ethan</groupId>
                <artifactId>spring-creed-cloud</artifactId>
                <version>1.0.0</version>
            </dependency>

            <dependency>
                <groupId>com.ethan</groupId>
                <artifactId>spring-creed-component</artifactId>
                <version>1.0.0</version>
            </dependency>
            <dependency>
                <groupId>com.ethan</groupId>
                <artifactId>spring-creed-controller</artifactId>
                <version>1.0.0</version>
            </dependency>
            <dependency>
                <groupId>com.ethan</groupId>
                <artifactId>spring-creed-service</artifactId>
                <version>1.0.0</version>
            </dependency>
            <dependency>
                <groupId>com.ethan</groupId>
                <artifactId>spring-creed-model</artifactId>
                <version>1.0.0</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-mobile</artifactId>
            <version>1.5.22.RELEASE</version>
        </dependency>


        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>${commons.lang3.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-text</artifactId>
            <version>${commons.text.version}</version>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>${lombok.version}</version>
            <scope>provided</scope>
        </dependency>


        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>

    </dependencies>

</project>